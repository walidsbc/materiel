{% extends "::layout.html.twig" %}
{% block title %}
    Lecture d'une intervention - {{ parent() }}
{% endblock %}
{% block body %}
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <h1>{{ intervention.natureintervention.name }}</h1>
        <span class="uk-text-muted uk-text-upper uk-text-small">Intervention</span>
    </div>
    <div id="page_content_inner">
        <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
            <div class="uk-width-xLarge-8-10 uk-width-large-10-10">
                <div class="md-card">
                    <div class="md-card-toolbar">
                        <h3 class="md-card-toolbar-heading-text">
                            Détails de l'intervention
                        </h3>
                    </div>
                    <div class="md-card-content">
                        <ul class="md-list">
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Nature de l'intervention </span>
                                    <span class="md-list-heading uk-text-large">{{ intervention.natureIntervention.name }}</span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Créée le </span>
                                    <span class="md-list-heading uk-text-large">{{ intervention.creationdate|date("d/m/Y") }}</span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Matériel </span>
                                    <span class="md-list-heading uk-text-large">{{ intervention.materiel.name }}</span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Par </span>
                                    <span class="md-list-heading uk-text-large">{{ intervention.interferedby }}</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="md-fab-wrapper md-fab-speed-dial">
        <a class="md-fab md-fab-primary" href="javascript:void(0)" data-uk-tooltip="{pos:'right'}"
           title="Actions"><i class="material-icons">&#xE55D;</i>
