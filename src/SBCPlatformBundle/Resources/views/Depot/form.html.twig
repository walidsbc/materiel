<div id="page_content_inner">
    <div class="md-card">
        <div class="md-card-content large-padding">
            {{ form_start(form, {'attr': {'class': 'uk-form-stacked', 'id':'form_validation'}}) }}
            {{ form_errors(form) }}
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-medium-1-2">
                    <div class="parsley-row">
                        <div class="uk-input-group">
                            <span class="uk-input-group-addon">
                                <i class="material-icons">&#xE0DA;</i>
                            </span>
                            {{ form_label(form.code,   "Code du Dépôt"|trans  ) }}
                            {{ form_widget(form.code, {'attr': {'class': 'md-input', 'required':''}}) }}
                        </div>
                        <span class="col-md-6 col-sm-4 col-xs-12 control-label red">     {{ form_errors(form.code) }} </span>
                    </div>
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-medium-1-2">
                    <div class="parsley-row">
                        <div class="uk-input-group">
                        <span class="uk-input-group-addon">
                            <i class="material-icons">&#xE84F;</i>
                        </span>
                            {{ form_label(form.name, "Nom du Dépôt"|trans) }}
                            {{ form_widget(form.name, {'attr': {'class': 'md-input', 'required':''}}) }}
                        </div>
                        <span class="col-md-6 col-sm-4 col-xs-12 control-label red">     {{ form_errors(form.name) }} </span>
                    </div>
                </div>
                <div class="uk-width-medium-1-2">
                    <div class="parsley-row">
                        <div class="uk-input-group">
                            <span class="uk-input-group-addon">
                        <i class="material-icons">&#xE0C8;</i>
                            </span>
                            {{ form_label(form.location, "Localisation") }}
                            {{ form_widget(form.location, {'attr': {'class': 'md-input'}}) }}
                        </div>
                        <span class="col-md-6 col-sm-4 col-xs-12 control-label red">     {{ form_errors(form.location) }} </span>
                    </div>
                </div>
            </div>
            <br/>
            <div class="uk-grid">
                <div class="uk-width-1-1">
                    {{ form_widget(form.save, {'attr': {'class': 'md-btn md-btn-primary'}}) }}
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>