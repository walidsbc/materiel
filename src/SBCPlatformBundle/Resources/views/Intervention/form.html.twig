<div id="page_content_inner">
    <div class="md-card">
        <div class="md-card-content large-padding">
            {{ form_start(form, {'attr': {'class': 'uk-form-stacked', 'id':'form_validation'}}) }}
            {{ form_errors(form) }}
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-medium-1-2">
                    <div class="parsley-row">
                        {{ form_label(form.interferedby, "Intervenant"|trans) }}
                    </div>
                    <div class="parsley-row">
                        {{ form_widget(form.interferedby, {'attr': {'class': 'md-input', 'required':''}}) }}
                    </div>
                    <span class="col-md-6 col-sm-4 col-xs-12 control-label red">     {{ form_errors(form.interferedby) }} </span>
                </div>
                <div class="uk-width-medium-1-2">
                    <div class="parsley-row">
                        {{ form_label(form.typeintervention, "Type d'intervention"|trans) }}
                    </div>
                    <div class="parsley-row">
                        {{ form_widget(form.typeintervention, {'attr': {'class': 'md-input', 'required':''}}) }}
                    </div>
                    <span class="col-md-6 col-sm-4 col-xs-12 control-label red">     {{ form_errors(form.typeintervention) }} </span>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1-1">
                    {{ form_widget(form.save, {'attr': {'class': 'md-btn md-btn-primary'}}) }}
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>