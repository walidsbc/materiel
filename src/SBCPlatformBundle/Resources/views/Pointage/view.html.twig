{% extends "::layout.html.twig" %}
{% block title %}
    Lecture d'un pointage - {{ parent() }}
{% endblock %}
{% block body %}
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <h1>{{ pointage.materiel.name }}</h1>
        <span class="uk-text-muted uk-text-upper uk-text-small">{{ pointage.creationdate|date('d/m/Y') }}</span>
    </div>
    <div id="page_content_inner">
        <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
            <div class="uk-width-xLarge-8-10 uk-width-large-10-10">
                <div class="md-card">
                    <div class="md-card-toolbar">
                        <h3 class="md-card-toolbar-heading-text">
                            Détails du pointage
                        </h3>
                    </div>
                    <div class="md-card-content">
                        <ul class="md-list">
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Nom du matériel </span>
                                    <span class="md-list-heading uk-text-large">{{ pointage.materiel.name }}</span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Emplacement</span>
                                    <span class="md-list-heading uk-text-large">{{ pointage.emplacement.name }}</span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Pointé par </span>
                                    <span class="md-list-heading uk-text-large"> {{ pointage.pointedby.name }}</span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Pointé le </span>
                                    <span class="md-list-heading uk-text-large"> {{ pointage.creationdate|date('d/m/Y') }}</span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-content">
                                    <span class="uk-text-small uk-text-muted uk-display-block">Durée d'utilisation </span>
                                    <span class="md-list-heading uk-text-large"> {{ pointage.usedduration }}</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="md-fab-wrapper md-fab-speed-dial">
        <a class="md-fab md-fab-primary" href="javascript:void(0)" data-uk-tooltip="{pos:'right'}"
           title="Actions">
            <i class="material-icons">&#xE55D;</i>
        </a>
        <div class="md-fab-wrapper-small">
            {#<a class="md-fab md-fab-small md-fab-success" href="{{ path('pointage_edit', {'id': pointage.id}) }}"#}
            {#data-uk-tooltip="{cls:'uk-tooltip-small',pos:'left'}" title="Modifier"><i class="material-icons">#}
            {#&#xE3C9;</i></a>#}
        </div>
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
{% endblock %}