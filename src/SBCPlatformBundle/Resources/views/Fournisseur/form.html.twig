                        <span class="col-md-6 col-sm-4 col-xs-12 control-label red">     {{ form_errors(form.email) }} </span>
                    </div>
                </div>
                <div class="uk-width-medium-1-2">
                    <div class="parsley-row">
                        <div class="uk-input-group">
